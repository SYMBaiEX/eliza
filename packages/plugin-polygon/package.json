{
  "name": "@elizaos/plugin-polygon",
  "description": "Plugin starter for elizaOS",
  "version": "1.0.0-beta.40",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "github:elizaos-plugins/plugin-polygon"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@elizaos/cli": "workspace:*",
    "@elizaos/core": "workspace:*",
    "@elizaos/plugin-tee": "workspace:*",
    "@lifi/data-types": "5.15.5",
    "@lifi/sdk": "3.4.1",
    "@lifi/types": "16.3.0",
    "ethers": "6.9.0",
    "viem": "^2.7.2",
    "axios": "^1.6.0",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "tsup": "8.4.0",
    "typescript": "5.8.2",
    "prettier": "3.5.3",
    "vitest": "^1.4.0",
    "@types/node": "^20.11.30"
  },
  "scripts": {
    "start": "elizaos start",
    "test-with-cli": "cd ../cli && bun run build && cd ../plugin-starter && elizaos test",
    "dev": "elizaos dev",
    "build": "tsup",
    "lint": "prettier --write ./src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "publish": "elizaos plugin publish",
    "format": "prettier --write ./src",
    "format:check": "prettier --check ./src"
  },
  "publishConfig": {
    "access": "public"
  },
  "resolutions": {
    "zod": "3.24.2"
  },
  "gitHead": "b165ad83e5f7a21bc1edbd83374ca087e3cd6b33",
  "platform": "universal",
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "POLYGON_RPC_URL": {
        "type": "string",
        "description": "Polygon (L2) JSON-RPC endpoint URL"
      },
      "ETHEREUM_RPC_URL": {
        "type": "string",
        "description": "Ethereum (L1) JSON-RPC endpoint URL"
      },
      "PRIVATE_KEY": {
        "type": "string",
        "description": "Private key for transaction signing (keep secure)",
        "sensitive": true
      },
      "POLYGONSCAN_KEY": {
        "type": "string",
        "description": "PolygonScan API key for gas estimations and other queries"
      },
      "GOVERNOR_ADDRESS": {
        "type": "string",
        "description": "Address of the governance contract",
        "optional": true
      },
      "TOKEN_ADDRESS": {
        "type": "string",
        "description": "Address of the governance token contract",
        "optional": true
      },
      "TIMELOCK_ADDRESS": {
        "type": "string",
        "description": "Address of the timelock controller contract",
        "optional": true
      }
    }
  }
}
